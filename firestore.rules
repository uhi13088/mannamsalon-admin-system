rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== 헬퍼 함수 =====
    
    // 인증된 사용자인지 확인
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 관리자인지 확인 (admin@mannamsalon.com)
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email == 'admin@mannamsalon.com';
    }
    
    // 본인의 데이터인지 확인
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ===== 컬렉션별 규칙 =====
    
    // 계약서 (contracts)
    match /contracts/{contractId} {
      // 관리자: 모든 권한
      // 직원: 본인 계약서만 읽기
      allow read: if isAdmin() || 
                     (isAuthenticated() && 
                      resource.data.employeeUid == request.auth.uid);
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // 서명된 계약서 (signedContracts)
    match /signedContracts/{contractId} {
      // 관리자: 모든 권한
      // 직원: 본인 서명만 생성/읽기
      allow read: if isAdmin() || isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // 매장 정보 (stores)
    match /stores/{storeId} {
      // 모든 인증된 사용자: 읽기
      // 관리자: 쓰기
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // 공지사항 (notices)
    match /notices/{noticeId} {
      // 모든 인증된 사용자: 읽기
      // 관리자: 쓰기
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    // 직원 서류 (employee_docs)
    match /employee_docs/{docId} {
      // 관리자: 모든 권한
      // 직원: 본인 서류만 읽기/쓰기
      allow read: if isAdmin() || isOwner(resource.data.employeeUid);
      allow create, update: if isAdmin() || 
                               (isAuthenticated() && 
                                request.resource.data.employeeUid == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    // 사용자 정보 (users) - Firebase Authentication과 연동
    match /users/{userId} {
      // 관리자: 모든 권한
      // 직원: 본인 정보만 읽기/수정
      allow read: if isAdmin() || isOwner(userId);
      allow create: if isAuthenticated();
      allow update: if isAdmin() || isOwner(userId);
      allow delete: if isAdmin();
    }
    
    // 승인 요청 (approvals)
    match /approvals/{approvalId} {
      // 관리자: 모든 권한
      // 직원: 본인 요청만 읽기, 생성만 가능
      allow read: if isAdmin() || 
                     (isAuthenticated() && 
                      resource.data.employeeUid == request.auth.uid);
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }
    
    // ===== 기본 규칙 (다른 모든 경로 차단) =====
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
